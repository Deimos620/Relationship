<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Listing Titles</h2>

            <table class="table table-striped table-bordered">
              <tr>
                <th>Name</th>
                <th>Year</th>
                <th>Type</th>
                <th>Description</th>
                <th>Action</th>
              </tr>
              <% @titles.each do |title| %>
                  <tr>
                    <td><%= title.name %></td>
                    <td><%= title.year %></td>
                    <td><%= title.title_type %></td>
                    <td><%= title.description %></td>
                    <td>
                        <%= link_to "Show", title_url(title), class: "btn btn-success" %>
                        <%= link_to "Remove", title, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
                    </td>
                  </tr>
              <% end %>
            </table>
          <div class="form-group">
            <%= link_to "Back to Create Title", new_title_url %><br>
            <%= link_to "Back to Create Relationship", new_relationship_url %>
          </div>
        </div>
    </div>
</div>